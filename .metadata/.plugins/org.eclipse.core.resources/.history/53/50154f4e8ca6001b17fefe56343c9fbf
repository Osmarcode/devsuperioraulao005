package com.osmarcode.myfirstproject.entities;

import java.io.Serializable;
import java.util.ArrayList;
import java.util.List;

import com.fasterxml.jackson.annotation.JsonIgnore;


public class Category implements Serializable {

	private static final long serialVersionUID = 1L;
	private Long id;
	private String name;
	
	//instanciando arraylist por padrão
	//devemos colocar o get e set dessa List
	//annotation faz um pré processamento
	//informa que não é para serializar a lista de produtos 
	//de uma categoria
	@JsonIgnore
	private List<Product> products = new ArrayList<>();
	
	public Category() {
	//construtor vazio	
	}
	
	public Category(Long id, String name) {
		super();
		this.id = id;
		this.name = name; //construtor com argumentos
	}
	
	public Long getId() {
		return id;
	}
	
	public void setId(Long id) {
		this.id = id;
	}
	
	public String getName() {
		return name;
	}
	
	public void setName(String name) {
		this.name = name;
	}
	
	//o get para poder acessar a list
	//remover o set porque não iremos modificar
	//em nenhuma momento nossa list
	public List<Product> getProducts() {
		return products;
	}

	//hashcode equals é usado como critério de comparação e o id
	//foi escolhido como critério de comparação entre objetos
	@Override  
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ((id == null) ? 0 : id.hashCode());
		return result;
		
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Category other = (Category) obj;
		if (id == null) {
			if (other.id != null)
				return false;
		} else if (!id.equals(other.id))
			return false;
		return true;
	}
}
